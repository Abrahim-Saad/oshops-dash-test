<%-include("../shared/header.ejs")  %> 
<%-include("../shared/navbar.ejs")  %>

<div class="main-content">
    <%-include("../shared/head.ejs")  %>

    <main>
        <div>
            <div id='msg'>
            </div>
            <div class="mb-4">
                <div>
                    <h2>All Products</h2>
                </div>
            </div>
            <div>
                <table class="table text-center">
                    <thead>
                        <th>Index</th>
                        <th>Product Name</th>
                        <th>Image</th>
                        <th>Price</th>
                        <th>Rate</th>
                        <th>Top Product</th>
                        <th>In Stock</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </thead>
                    <tbody id="productTable">
        
                        <% for( let index = 0; index < allProducts.length; index++ ) { %>
                            <tr>
                                <td class="text-info"><%=index + 1 %> -</td>
                                <td><%=allProducts[index].productName%></td>
                                <td><img src="<%=allProducts[index].productImageURL%>" alt="Jumia" width="55px"
                                height="auto"></td>
                                <td><%=allProducts[index].price%> <b class="text-success">AED</b></td>
                                <td>
                                    <% switch (allProducts[index].rate) {
                                        case 1: %>
                                            <i class="fas fa-star"  style="font-size: larger; color: #FFD700;"></i>
                                            <% break;
                
                                        case 2: %>
                                            <i class="fas fa-star"  style="font-size: larger; color: #FFD700;">
                                            </i><i class="fas fa-star"  style="font-size: larger; color: #FFD700;"></i>
                                           <% break;
                
                                        case 3: %>
                                            <i class="fas fa-star"  style="font-size: larger; color: #FFD700;">
                                            </i><i class="fas fa-star"  style="font-size: larger; color: #FFD700;"></i>
                                            <i class="fas fa-star"  style="font-size: larger; color: #FFD700;"></i>
                                            <% break; 
                
                                        case 4:%>
                                            <i class="fas fa-star"  style="font-size: larger; color: #FFD700;">
                                            </i><i class="fas fa-star"  style="font-size: larger; color: #FFD700;"></i>
                                            <i class="fas fa-star"  style="font-size: larger; color: #FFD700;"></i>
                                            <i class="fas fa-star"  style="font-size: larger; color: #FFD700;"></i>
                                            <% break;
                
                                        case 5: %>
                                            <i class="fas fa-star"  style="font-size: larger; color: #FFD700;">
                                            </i><i class="fas fa-star"  style="font-size: larger; color: #FFD700;"></i>
                                            <i class="fas fa-star"  style="font-size: larger; color: #FFD700;"></i>
                                            <i class="fas fa-star"  style="font-size: larger; color: #FFD700;"></i>
                                            <i class="fas fa-star"  style="font-size: larger; color: #FFD700;"></i>
                                            <% break;
                
                                        default:
                                            break;
                                        } %>
                                 

                                </td>

                                <td>
                                    <% if (allProducts[index].topProduct) { %>
                                        <i class="fas fa-check text-success" style="font-size: 30px"></i>;
                                    <% } else { %>
                                       <i class="fas fa-times text-danger" style="font-size: 30px"></i>
                                    <% } %>
                                </td>


                                <td>
                                    <% if (allProducts[index].inStock) { %>
                                        <i class="fas fa-check text-success" style="font-size: 30px"></i>;
                                    <% } else { %>
                                       <i class="fas fa-times text-danger" style="font-size: 30px"></i>
                                    <% } %>
                                </td>

                                <form action="/getProductById/<%=allProducts[index]._id%>" method="get">
                                    <td><button class="btn btn-outline-info" ><i class="fas fa-pencil-alt"></i> Veiw & Update</button></td>
                                </form>
                                
                                <form action="/deleteProduct/<%=allProducts[index]._id%>" method="post">
                                    <td><button class="btn btn-outline-danger" id="delete" ><i class="fas fa-trash-alt"></i> Delete</button></td>
                                </form>    
                            </tr>
                        <% } %>
                    </tbody>
                </table>


                <div class="text-center d-flex justify-content-center">
                    <div aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item">
                                <a class="page-link" href="#" onclick="previousPaginate()" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <div id="totalPages" class="d-flex">

                            </div>
                            <li class="page-item">
                                <a class="page-link" href="#" onclick="nextPaginate()" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                        <div id="info">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<%-include("../shared/footer.ejs")  %>