<%-include("../shared/header.ejs")  %> 
<%-include("../shared/navbar.ejs")  %> 

<div class="main-content">
    <%-include("../shared/head.ejs")  %> 
    
    <main>
        <div>
            <div id='msg'>
            </div>
            <div class="mb-4">
                <div>
                    <h2>All Categories</h2>
                </div>
            </div>
            <div>
                <table class="table text-center">
                    <thead>
                        <th>Index</th>
                        <th>Category Name</th>
                        <th>Logo</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </thead>
                    <tbody id="categoryTable">
                        <% for( let index = 0; index < allCategories.length; index++ ) { %>
                            <tr>
                                <td class="text-info"><%=index + 1 %> - </td>
                                <td><i class="far fa-folder-open text-danger" style="font-size: 25px;"></i> <%=allCategories[index].categoryName%></td>
                                <td><img src="<%=allCategories[index].categoryImageURL%>" alt="Jumia" width="55px"
                                height="auto"></td>

                                <form action="/getCategoryById/<%=allCategories[index]._id%>" method="get">
                                    <td><button class="btn btn-outline-info" ><i class="fas fa-pencil-alt"></i> Veiw & Update</button></td>
                                </form>

                                <form action="/deleteCategory/<%=allCategories[index]._id%>" method="post">
                                    <td><button class="btn btn-outline-danger" id="delete"><i class="fas fa-trash-alt"></i> Delete</button></td>
                                </form>    
                            </tr>
                        <% } %>
                    </tbody>
                </table>


                <div class="text-center d-flex justify-content-center">
                    <div aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item">
                                <a class="page-link" href="#" onclick="previousPaginate()" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <div id="totalPages" class="d-flex">

                            </div>
                            <li class="page-item">
                                <a class="page-link" href="#" onclick="nextPaginate()" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                        <div id="info">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<%-include("../shared/footer.ejs")  %> 