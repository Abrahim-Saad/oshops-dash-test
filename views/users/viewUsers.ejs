<%-include("../shared/header.ejs")  %> 
<%-include("../shared/navbar.ejs")  %> 

<div class="main-content">
    <%-include("../shared/head.ejs")  %> 
    
    <main>
        <div>
            <div id='msg'>
            </div>
            <div class="mb-4">
                <div>
                    <h2>All Users</h2>
                </div>
            </div>
            <div>
                <table class="table text-center">
                    <thead>
                        <th>Index</th>
                        <th>Full Name</th>
                        <th>Image</th>
                        <th>Email</th>
                        <th>Address</th>

                    </thead>
                    <tbody id="userTable">
                        <% for( let index = 0; index < allUsers.length; index++ ) { %>
                            <tr>
                                <td class="text-info"><%=index + 1 %></td>
                                <td><i class="fas fa-user-tie text-info" style="font-size: 25px"></i> <%=allUsers[index].firstName%> <%=allUsers[index].lastName%></td>
                                <td>
                                    <% if (allUsers[index].profilePictureURL) { %>
                                     
                                        <img src="<%=allUsers[index].profilePictureURL%>" alt="null" width="55px"
                                        height="auto">

                                    <% } else { %>
                                     
                                        <i class="fas fa-user-lock text-danger" style="font-size: 35px"></i>
                                    <% } %>    

                                     
                                </td>
                                <td><i class="fas fa-at text-success" style="font-size: 20px"></i> <%=allUsers[index].email%></td>
                                <td><i class="fas fa-map-marker-alt text-danger" style="font-size: 20px"></i> <%=allUsers[index].address%></td></tr>
                        <% } %>
                    </tbody>
                </table>


                <div class="text-center d-flex justify-content-center">
                    <div aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item">
                                <a class="page-link" href="#" onclick="previousPaginate()" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <div id="totalPages" class="d-flex">

                            </div>
                            <li class="page-item">
                                <a class="page-link" href="#" onclick="nextPaginate()" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                        <div id="info">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<%-include("../shared/footer.ejs")  %> 