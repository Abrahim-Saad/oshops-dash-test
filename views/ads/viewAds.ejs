<%-include("../shared/header.ejs")  %> 
<%-include("../shared/navbar.ejs")  %> 

<div class="main-content">
    <%-include("../shared/head.ejs")  %> 
   
    <main>
        <div>
            <div id='msg'>
            </div>
            <div class="mb-4">
                <div>
                    <h2>All advertismnts</h2>
                </div>
            </div>
            <div>
                <table class="table text-center">
                    <thead>
                        <th>Index</th>
                        <th>Title</th>
                        <th>Advertisment image</th>
                        <th>isActive</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </thead>
                    <tbody id="advertismentTable">
                        <% for( let index = 0; index < allAds.length; index++ ) { %>
                            <tr>
                                <td class="text-info"><%=index + 1%> -</td>
                                <td><i class="fas fa-hashtag text-info"></i> <%=allAds[index].title%></td>
                                <td><img src="<%=allAds[index].advertismentImageURL%>" alt="Jumia" width="55px"
                                height="auto"></td>
                                <td>
                                    <% if (allAds[index].isActive) { %>
                                        <i class="fas fa-check text-success" style="font-size: 30px"></i>
                                    
                                    <% } else { %>
                                        <i class="fas fa-times text-danger" style="font-size: 30px"></i>
                                    <% } %>    
                                     
                                </td>
                                
                                <form action="/getAdvertismentById/<%=allAds[index]._id%>" method="get">
                                    <td><button class="btn btn-outline-info"><i class="fas fa-pencil-alt"></i> Veiw & Update</button></td>
                                </form>

                                <form action="/deleteAdvertisment/<%=allAds[index]._id%>" method="post">
                                    <td><button class="btn btn-outline-danger" id="delete" ><i class="fas fa-trash-alt"></i> Delete</button></td>
                                </form>    
                            </tr>
                        <% } %>
                    </tbody>
                </table>

                <div class="text-center d-flex justify-content-center">
                    <div aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item">
                                <a class="page-link" href="#" onclick="previousPaginate()" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <div id="totalPages" class="d-flex">

                            </div>
                            <li class="page-item">
                                <a class="page-link" href="#" onclick="nextPaginate()" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                        <div id="info">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<%-include("../shared/footer.ejs")  %> 